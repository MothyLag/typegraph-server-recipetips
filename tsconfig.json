{
  "compilerOptions": {
    "lib": ["esnext.asynciterable", "es2016"],
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "watch": false,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
